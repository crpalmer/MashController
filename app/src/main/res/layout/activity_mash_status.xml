<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mashStatusTop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pump"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <ToggleButton
                android:id="@+id/pumpOnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="Off"
                android:textOn="On" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heater"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <ToggleButton
                android:id="@+id/heaterOnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ToggleButton"
                android:textOff="Off"
                android:textOn="On" />
        </LinearLayout>
    </LinearLayout>

    <!-- Temperature | Heater -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Temperature -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:layout_marginStart="7dp"
                android:text="Temperature"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Material.Large" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Target Temperature -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/targetTempView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginStart="12dp"
                        android:text="Target"
                        android:textAppearance="@android:style/TextAppearance.Material.Large" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/targetTemperature"
                            android:layout_width="89dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="46dp"
                            android:ems="10"
                            android:inputType="numberDecimal"
                            android:textAlignment="center" />

                        <ImageButton
                            android:id="@+id/targetTempOkay"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@mipmap/ic_action_okay" />

                        <ImageButton
                            android:id="@+id/targetTempCancel"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@mipmap/ic_action_cancel" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Actual Temperature -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="12dp"
                        android:text="Actual"
                        android:textAppearance="@android:style/TextAppearance.Material.Large" />

                    <EditText
                        android:id="@+id/actualTemperature"
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="53dp"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Heater -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/heaterPower"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="3dp"
                android:layout_marginStart="19dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
